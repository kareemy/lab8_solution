@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Index</h1>
<p>
    <a asp-page="Create">Add New Patient</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Patients[0].FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Patients[0].LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Patients[0].AdmitDate)</th>
            <th>@Html.DisplayNameFor(model => model.Patients[0].SymptomDescription)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patients)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.FirstName)</td>
                <td>@Html.DisplayFor(model => item.LastName)</td>
                <td>@Html.DisplayFor(model => item.AdmitDate)</td>
                <td>@Html.DisplayFor(model => item.SymptomDescription)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PatientID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PatientID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PatientID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>